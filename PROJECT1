<script>

const list=[];
let Llen= list.length;
let text = "<ul>";
for(let i=0;i<Llen;i++){
text+= "<li>"+list[i]+"</li>";
}
text+="</ul>";
document.getElementById("divid").innerHTML=text;

function newElement(){
//onclick  event.value 
var x = document.getElementById("inputid").value;

//arr.push 
list.push(x);
let Llen= list.length;
let text = "<ul>";
for(let i=0;i<Llen;i++){
text+= "<li onclick='completed(this)'>"+list[i]+  "<span onclick='deleteLi(this)' style='float:right; width:15px 20px;'>❌</span></li>";
document.getElementById("inputid").value= "";
}
text+="</ul>";

document.getElementById("divid").innerHTML=text;
}
