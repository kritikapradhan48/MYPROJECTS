function createLi(e){
var element=document.getElementById("kritika");
e.classList.toggle("myStyle");
}
//function for delete list

	function deleteLi(e){
     e.parentElement.remove();
	}
    
    function completed (kriti){
    	 kriti.classList.toggle("myStyle");
	}
    
    
    
    
    
    //✓//
</script>

